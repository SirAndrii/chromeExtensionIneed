{
  "manifest_version": 3,
  "name": "Highlight stop-words on Indeed page",
  "version": "0.18",
  "description": "If Indeed's container has restricted word secret or clearance - heighlight it and change background of root container",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://indeed.com/*","https://*.indeed.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "html/interface.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}