{
  "manifest_version": 3,
  "name": "Highlight indeed's containers ",
  "version": "0.16",
  "description": "If container has word secret or clearance - heighlight it with red",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "html/interface.html"
  },
  "permissions": [
    "storage"
  ]
}